<?xml version="1.0" encoding="UTF-8"?>

<launch>

	<!-- Robot pose -->
  <arg name="x" default="2"/>
  <arg name="y" default="3"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="0"/>

  <!-- Launch other relevant files-->
  <include file="$(find my_simulations)/launch/load_robot_description.launch"/>


  <!-- Define World File -->
  <arg name="world_file" default="$(find my_simulations)/world/RobotWorld.world"/>

  <!-- Launch Gazebo World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true" />
    <arg name="world_name" value="$(arg world_file)"/>
  </include>

	<!-- Find my robot Description-->
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find my_simulations)/urdf/rat_bot_structure.xacro'"/>

  <!-- Spawn My Robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -param robot_description -model robot_description 
              -x $(arg x) -y $(arg y) -z $(arg z)
              -R $(arg roll) -P $(arg pitch) -Y $(arg yaw)"/>

	<!--launch rviz-->
	<node name="rviz" pkg="rviz" type="rviz" respawn="false"/>

</launch>
